<div class="container px-5 px-sm-0">
  <div class="row">

   <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @book %>
   </div>


   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
    <table class="table">
     <tbody>
      <tr>
       <td>
        <%= link_to user_path(@user) do %>
        <%= attachment_image_tag @showbook.user, :profile_image, :fill, 90, 100, fallback: "no_image.jpg" %><br>
        <% end %>
        <%= link_to @user.name, user_path(@user) %>
       </td>
       <td><%= link_to @showbook.title, book_path(@showbook) %></td>
       <td><%= @showbook.body %></td>
       <td>
          <% if @showbook.favorited_by?(current_user) %>
          <p>
           <%= link_to book_favorites_path(@showbook), method: :delete do %>
           ♥<%= @showbook.favorites.count %>
           <% end %>
          </p>
           <% else %>
          <p>
           <%= link_to book_favorites_path(@showbook), method: :post do %>
           ♡<%= @showbook.favorites.count %>
           <% end %>
          </p>
           <% end %>
       </td>
       <td>コメント数：<%= @showbook.book_comments.count %></td>
       <% if @showbook.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@showbook),class:"btn btn-sm btn-success" %></td>
       <td><%= link_to "Destroy",book_path(@showbook), method: :delete,class:"btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
     </tbody>
    </table>

           <% @showbook.book_comments.each do |book_comment| %>
           <%= link_to user_path(book_comment.user.id) do %>
           <p><%= attachment_image_tag book_comment.user, :profile_image, :fill, 90, 100, fallback: "no_image.jpg" %></p>
           <%= book_comment.user.name %>
           <% end %>
           <%= book_comment.comment %>
           <% if book_comment.user == current_user %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
           <% end %>
           <% end %>

             <% if @showbook.errors.any? %>
             <%= @showbook.errors.count %>error prohibited this obj from being saved:
             <% @showbook.errors.full_messages.each do |message| %>
             <%= message %>
             <% end %>
             <% end %>
           <%= form_with(model:[@showbook, @book_comment], local: true) do |f| %>
           <%= f.text_area :comment, rows:'5' %>
           <%= f.submit "送信" %>
           <% end %>


   </div>
  </div>
</div>

