<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
     <% if @user.errors.any? %>
     <%= @user.errors.count %>error prohibited this obj from being saved:
     <% @user.errors.full_messages.each do |message| %>
     <%= message %>
     <% end %>
     <% end %>
    <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
      <label for="user_name">Name</label>
      <%= f.text_area :name, class:"form-control name" %>
    </div>
    <div class="form-group">
      <label for="user_image">Image</label>
       <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-control-file user_image" %>
    </div>
    <div class="form-group">
      <label for="user_introduction">Introduction</label>
       <%= f.text_area :introduction, class:"form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update User', class:"btn btn-secondary" %>
    </div>
   <% end %>
  </div>
 </div>
</div>